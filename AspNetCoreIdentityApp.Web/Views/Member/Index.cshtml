@{
    ViewData["Title"] = "Index";
}
@model UserUserViewModel

<div class="row">
    <div class="col-md-4 offset-md-4 text-center">
        <user-picture-thumbnail class="rounded w-100" picture-url="@Model.PictureUrl"></user-picture-thumbnail>
    </div>
</div>

<div class="row">

    <div class="col-md-6 offset-md-3">
        <h1>User Information</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tr>
                <td>@Model.Username</td>
                <td>@Model.Email</td>
                <td>@Model.PhoneNumber</td>
            </tr>
        </table>
    </div>

</div>



